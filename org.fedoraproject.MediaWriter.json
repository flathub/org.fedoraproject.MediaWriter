{
    "id": "org.fedoraproject.MediaWriter",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "command": "mediawriter",
    "rename-appdata-file": "mediawriter.appdata.xml",
    "rename-desktop-file": "mediawriter.desktop",
    "rename-icon": "mediawriter",
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=host",
        "--share=network",
        "--share=ipc",
        "--system-talk-name=org.freedesktop.UDisks2"
    ],
    "modules": [
        {
            "name": "MediaWriter",
            "buildsystem": "qmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/MartinBriza/MediaWriter",
                    "tag": "4.1.5"
                }
            ]
        }
    ]
}
